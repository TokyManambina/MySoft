<partial name="~/Views/Widget/headerCard.cshtml" />
<!--#region TitrePage-->
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Mes Documents</h1>
			</div>
			<div class="col-sm-6">
				<ul class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="#">Home</a></li>
					<li class="breadcrumb-item active">Mes Documents</li>
				</ul>
			</div>
		</div>
	</div>
</section>
<!--#endregion-->
<!--#region Section-->
<section class="content">
	<div class="row">
		<div class="col-md-3">
			<a class="btn btn-primary bg-gradient mb-3 col-12" asp-area="" asp-action="NewDocument">Nouveau Document</a>
			<div class="card mb-5">
				<div class="card-header">
					<h3 class="card-title">Dossiers</h3>

					<div class="card-tools">
						<button type="button" class="btn btn-tool" data-card-widget="collapse">
							<i class="fas fa-minus"></i>
						</button>
					</div>
				</div>
				<div class="card-body p-0">
					<ul class="nav nav-pills flex-column">
						<li class="nav-item active">
							<div class="nav-link" onclick="changeList('All')">
								<i class="fa fa-inbox"></i> Boite de réception
								<span class="badge bg-primary float-right" data-id="ct_DocTot">0</span>
							</div>
						</li>
						<li class="nav-item active">
							<div class="nav-link" onclick="changeList('All')">
								<i class="fa fa-paper-plane"></i> Boite d'envoi
								<span class="badge bg-info float-right" data-id="ct_DocTot">0</span>
							</div>
						</li>
						<li class="nav-item">
							<div class="nav-link" onclick="changeList('Remaining')">
								<i class="fa fa-spinner fa-spin"></i> En Cours
								<span class="badge bg-teal float-right" data-id="ct_DocRemain">0</span>
							</div>
						</li>
						<li class="nav-item">
							<div class="nav-link" onclick="changeList('Sign')">
								<i class="fa fa-file-signature"></i> Signé
								<span class="badge bg-success float-right" data-id="ct_DocSign">0</span>
							</div>
						</li>
						<li class="nav-item">
							<div class="nav-link" onclick="changeList('Archive')">
								<i class="fas fa-file-archive"></i> Archivés
								<span class="badge bg-danger float-right" data-id="ct_DocArc">0</span>
							</div>
						</li>
					</ul>
				</div>
			</div>

			<div id="sign">
			</div>

		</div>


		<div class="col-md" id="Panel">
			<div id="p_doc" data-type="panel">
				<div class="card card-primary card-outline mb-1">
					<div class="card-header">
						<button class="btn btn-default btn-sm" onclick="changeList('All')">
							<i class="fas fa-reply"></i>
						</button><br><br>
						<h6 class="col"><u>Objet</u> : ${document.object}</h6>
						<div class="col">
							<span class="mailbox-read-time"></span>
							<span class="mailbox-read-time float-right">${document.dateSend}</span>
						</div>
					</div>

					<div class="card-body p-2">
						<h6><u>Message </u>:</h6>
						<div class="mailbox-controls with-border p-3">${document.message}</div>

						<div class="mailbox-read-message text-center flex-column">
							<embed pdf_Viewer type="application/pdf" src="" width="100%" height="1000">
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>

</section>
<embed id="embedElement" width="500" height="300" type="application/pdf"></embed>

<!--#endregion-->
