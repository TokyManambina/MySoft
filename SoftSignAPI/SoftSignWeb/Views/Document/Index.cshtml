<partial name="~/Views/Widget/headerCard.cshtml" />
<!--#region TitrePage-->
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Mes Documents</h1>
			</div>
			<div class="col-sm-6">
				<ul class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="#">Home</a></li>
					<li class="breadcrumb-item active">Mes Documents</li>
				</ul>
			</div>
		</div>
	</div>
</section>
<!--#endregion-->
<!--#region Section-->
<section class="content">
	<div class="row">
		<div class="col-md-3">
			<a class="btn btn-primary bg-gradient mb-3 col-12" asp-area="" asp-action="NewDocument">Nouveau Document</a>
			<div class="card mb-5">
				<div class="card-header">
					<h3 class="card-title">Dossiers</h3>

					<div class="card-tools">
						<button type="button" class="btn btn-tool" data-card-widget="collapse">
							<i class="fas fa-minus"></i>
						</button>
					</div>
				</div>
				<div class="card-body p-0">
					<ul class="nav nav-pills flex-column">
						<li class="nav-item active">
							<div class="nav-link" document-status="0">
								<i class="fa fa-inbox"></i> <span document-name>Boite de réception</span>
								@* <span class="badge bg-primary float-right" data-id="ct_DocTot">0</span> *@
							</div>
						</li>
						<li class="nav-item active">
							<div class="nav-link" document-status="1">
								<i class="fa fa-paper-plane"></i> <span document-name>Boite d'envoi</span>
								@* <span class="badge bg-info float-right" data-id="ct_DocTot">0</span> *@
							</div>
						</li>
						<li class="nav-item active">
							<div class="nav-link" document-status="2">
								<i class="fa fa-inbox"></i> <span document-name>Mes documents</span>
								@* <span class="badge bg-primary float-right" data-id="ct_DocTot">0</span> *@
							</div>
						</li>
						<li class="nav-item">
							<div class="nav-link" document-status="3">
								<i class="fa fa-spinner fa-spin"></i> <span document-name>En Cours</span>
								<span class="badge bg-teal float-right" data-id="ct_DocRemain">0</span>
							</div>
						</li>
						<li class="nav-item">
							<div class="nav-link" document-status="4">
								<i class="fa fa-file-signature"></i> <span document-name>Signé</span>
								<span class="badge bg-success float-right" data-id="ct_DocSign">0</span>
							</div>
						</li>
						<li class="nav-item">
							<div class="nav-link" document-status="5">
								<i class="fas fa-file-archive"></i> <span document-name>Archivés</span>
								<span class="badge bg-danger float-right" data-id="ct_DocArc">0</span>
							</div>
						</li>
					</ul>
				</div>
			</div>

			<div id="sign">
			</div>

		</div>


		<div class="col-md" id="Panel">
			<div id="p_MyDocument" data-type="panel" data-stat="all">
				<div class="card card-primary card-outline mb-5">
					<div class="card-header">
						<h3 class="card-title" document-title>Boite de réception</h3>
						<div class="card-tools">
							<div class="input-group input-group-sm">
								<a class="nav-link" data-toggle="dropdown" href="#">
									<i class="fa fa-filter"></i>
								</a>
								<div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
									<span class="dropdown-item dropdown-header">Filtrer par :</span>
									<div class="dropdown-divider"></div>
									<a href="#" class="dropdown-item">
										Date d'envoi
									</a>
									<div class="dropdown-divider"></div>
									<a href="#" class="dropdown-item">
										Destinataire
									</a>
									<div class="dropdown-divider"></div>
									<a href="#" class="dropdown-item">
										Etat
									</a>
								</div>
							</div>
						</div>
					</div>

					<div class="card-body p-0">

						<div class="mailbox-controls">
						</div>

						<div class="table-responsive mailbox-messages">
							<table class="table table-hover table-striped">
								<tbody id="listDocument">
									<!--Affichage Liste-->
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>

</section>

